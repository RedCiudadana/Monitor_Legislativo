{% extends "src/base.njk" %}

{% block head %}
<title>Análisis Legislativo | Monitor Legislativo</title>
{% endblock %}

{% block content %}

        <!-- Slider
		============================================= -->
		<section id="slider" class="bg-color">
			<div class="container">
				<div class="row d-flex py-2 justify-content-center">
                    <div class="col-lg-8 col-md-8 col-sm-12 d-flex align-self-center flex-column text-center py-6">
                        <img src="/assets/img/monitor/01_ICONOS/ML-13.png" style="width: 150px; height: auto;" class="m-auto mb-2">
						<h2 class="mb-2 text-white" style="font-size:40px!important">Análisis Legislativo</h2>
						<p class="text-white" style="font-size:20px!important; font-weight: 400;">
                            Lorem ipsum dolor sit amet, Lorem ipsum dolor sit amet, Lorem ipsum dolor sit amet, Lorem ipsum dolor sit amet
                        </p>

					</div>
				</div>
			</div>
        </section>

        <!-- Iniciativas
        ============================================= -->

        <section class="px-2" style="background-color: #F0F7FC!important;">
            <div class="container clearfix ">
                <div class="row py-6">
                    <div class="col-lg-12">
            
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead class="bg-primary text-white">
                                    <tr>
                                        <th>
                                            <div class="d-flex justify-content-center align-items-center">
                                                <img src="/assets/img/monitor/01_ICONOS/02.png">
                                                <p>Sesión</p>
                                            </div>
                                        </th>
                                        <th>
                                            <div class="d-flex justify-content-center align-items-center">
                                                <img src="/assets/img/monitor/01_ICONOS/03.png">
                                                <p>Fecha de la Sesión</p>
                                            </div>
                                        </th>
                                        <th>
                                            <div class="d-flex justify-content-center align-items-center">
                                                <img src="/assets/img/monitor/01_ICONOS/01.png">
                                                <p>Votaciones</p>
                                            </div>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for sesion in collections.sesion | reverse %}
                                    <tr>
                                        <td class="text-center align-middle" data-label="Sesión">{{ sesion.data.sesion.nombreSesion }}</td>
                                        <td class="text-center align-middle" data-label="Fecha de la Sesión">{{ sesion.data.sesion.fechaSesionFormateada }}</td>
                                        <td class="text-center align-middle" data-label="Votaciones">
                                            <a class="btn " href="{{ sesion.url }}">Ver votaciones</a>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        

                    </div>

                </div>
            </div>
        </section>

{% endblock %}