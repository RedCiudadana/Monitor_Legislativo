{% block content %}

        <!-- Slider
		============================================= -->
		<section id="slider" class="bg-color">
			<div class="container">
				<div class="row d-flex py-6">
                    <div class="col-lg-12 col-md-12 col-sm-12 d-flex align-self-center flex-column text-center py-6">
                        <img src="/assets/img/monitor/01_ICONOS/ML-14.png" style="width: 150px; height: auto;" class="m-auto mb-2">
                        <h2 class="mb-2 text-white" style="font-size:40px!important">Recursos</h2>
                        <p class="text-white" style="font-size:20px!important; font-weight: 400;">
                            Lorem ipsum dolor sit amet, Lorem ipsum dolor sit amet, Lorem ipsum dolor sit amet, Lorem ipsum dolor sit amet
                        </p>
        
                    </div>
                </div>
			</div>
        </section>

        <!-- Iniciativas
        ============================================= -->

        <section class="px-2">
            <div class="container clearfix ">
                <div class="row py-6">
                    <div class="col-lg-12">
                        {% for recurso in collections.recursos %}
                        <div class="iniciativas my-4">
                            <img style="width: 30%;" src="{{recurso.data.image}}">
                            <div class="px-6">
                                <h2 class="text-titles">{{recurso.data.title}}</h2>
                                <p>{{recurso.data.description}}</p>
                                <a class="btn" href="{{recurso.data.recurso}}" target="_blank">Descargar <i class="fa-solid fa-right-long"></i></a>
                            </div>
                        </div>
                        {% endfor %}
                    </div>

                </div>
            </div>
        </section>

{% endblock %}