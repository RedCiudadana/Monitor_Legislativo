---
pagination:
  data: collections.sesiones
  size: 1
  alias: sesion
  addAllPagesToCollections: true
permalink: "sesiones/{{ sesion.nombreSesion | slug }}/index.html"
tags:
  - sesion
---

{% extends "src/base.njk" %}

{% block head %}
<title>{{ sesion.nombreSesion }} | Monitor Legislativo</title>
{% endblock %}

{% block content %}

<section id="slider" class="bg-color">
    <div class="container">
        <div class="row d-flex">
            <div class="col-lg-12 col-md-12 col-sm-12 d-flex align-self-center flex-column pt-5 pb-0 py-lg-6 mb-0 my-lg-4">
                <h2 class="text-slider2" style="color: #fff!important;">
                    {{ sesion.fechaSesionFormateada }}
                </h2>
                <h2 class="text-slider" style="color: #fff!important;">
                    {{ sesion.nombreSesion }}
                </h2>
            </div>
        </div>
    </div>
</section>

<section class="px-2">
    <div class="container clearfix ">
        <div class="row py-6">
            <div class="col-lg-12 my-4">
                <span class="breadcrumb_v2">
                    <a href="/analisis_legislativo/index.html">Análisis Legislativo</a> 
                    <p>/</p>
                    <a href="#" style="pointer-events: none;">{{ sesion.nombreSesion }}</a>
                </span>
            </div>
            <div class="col-lg-12 my-4">
                <div class="row">
                    {% for pregunta in sesion.preguntas %}
                        <div class="col-lg-2">
                            <h3>Pregunta {{ pregunta['Número de Pregunta'] }}</h3>
                        </div>

                        <div class="col-lg-6">
                            <p>{{ pregunta['Nombre de Pregunta'] }}</p>
                        </div>
    
                        <div class="col-lg-4">
                            {% set preguntaPage = pregunta.id | findPreguntaPage(collections.pregunta) %}
                            {% if preguntaPage %}
                                <a class="btn" href="{{ preguntaPage.url }}">Ver Votaciones</a>
                            {% else %}
                                <!-- Manejar el caso donde no se encontró la página de la pregunta -->
                                <p>Página no encontrada</p>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}
