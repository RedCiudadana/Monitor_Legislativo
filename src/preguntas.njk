---
pagination:
  data: collections.preguntas
  size: 1
  alias: pregunta
  addAllPagesToCollections: true
  # Puedes personalizar el permalink como desees
permalink: "preguntas/{{ pregunta['Número de Pregunta'] | slug }}/index.html"
tags:
  - pregunta
---

{% extends "src/base.njk" %}

{% block content %}

        <!-- Slider
		============================================= -->
		<section id="slider" class="bg-color">
			<div class="container">
				<div class="row d-flex">
					<div class="col-lg-12 col-md-12 col-sm-12 d-flex align-self-center flex-column pt-5 pb-0 py-lg-6 mb-0 my-lg-4">

                        <h2 class="text-slider2">
                            Pregunta {{ pregunta['Número de Pregunta'] }}
						</h2>
						<h2 class="text-slider" style="font-size:40px!important; line-height: 45px;">
                            {{ pregunta['Nombre de Pregunta'] }}
                        </h2>
						

					</div>
				</div>
			</div>
        </section>

        <!-- Iniciativas
        ============================================= -->

        <section class="px-2">
            <div class="container clearfix ">
                <div class="row py-6">
                    <div class="col-lg-12">

                        <div class="row my-4">
                            <div class="col-lg-4"><h2>Diputado</h2></div>
                            <div class="col-lg-4"><h2>Bloque al que Representa</h2></div>
                            <div class="col-lg-4"><h2>Voto</h2></div>
                        </div>

                        <div class="row">
                            {% for voto in pregunta.votos %}
                                {% set diputado = voto.nombreDiputado | findClosestDiputado(collections.diputado) %}
                                {% if diputado %}
                                    <div class="col-lg-4"><p><a href="{{ diputado.url }}">{{ diputado.data.diputado['Nombre'] }}</a></p></div>
                                    <div class="col-lg-4"><p>{{ diputado.data.diputado['Bloque al que representa'] }}</p></div>
                                    <div class="col-lg-4"><p>{{ voto.votoEmitido }}</p></div>
                                {% else %}
                                {% endif %}
                            {% endfor %}
                        </div>

                    </div>

                </div>
            </div>
        </section>


{% endblock %}
